<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meal_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Quattro Fromagi Pizza"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/meal_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/meal_item_name"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            tools:text="Last Friday"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meal_item_calorie_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1500 Calories"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/meal_item_portion_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:text="2 portions"
            android:textSize="20sp"/>
    </RelativeLayout>

</LinearLayout>